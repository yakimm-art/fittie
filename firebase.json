{
  "hosting": {
    "public": "build/web",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/geminiGenerate",
        "function": {
          "functionId": "geminiGenerate",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/geminiChat",
        "function": {
          "functionId": "geminiChat",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/geminiVision",
        "function": {
          "functionId": "geminiVision",
          "region": "us-central1"
        }
      },
      {
        "source": "/api/elevenLabsTts",
        "function": {
          "functionId": "elevenLabsTts",
          "region": "us-central1"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git"
      ]
    }
  ]
}
